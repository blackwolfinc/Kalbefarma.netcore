



@{
    ViewData["Title"] = "RiskOP";
    Layout = "~/Views/Shared/_MenuUtama.cshtml";

}

@model kalbe_farma_tampilan.ViewsModels.DocumentViewModels


<link rel="stylesheet" href="~/css/opRisk.css">
<div class="paling-atas"><h1>Operational Risk Form</h1></div>
<div class="card">


    <div class="btn-wraper-oprisk">
        <a class="btn btn-danger btn-round" asp-area="" asp-controller="Home" asp-action="HomePage">Back</a>
        <button class="btn btn-warning btn-round">Export</button>
    </div>



</div>


<div class="card">
    <div class="card-header">
        <h5>Operational Risk Register Document</h5>
    </div>
    <div class="card-body">
        <div class="container">
            <div class="btn-wraper-oprisk-form">
                <div class="form isian-inputan">
                    <span>RR Doc. No.</span>
                    <input class="form-control form-risk" type="text" name="name" value="" disabled placeholder="automatic Number input" />


                    <span>Main/Supportive Process</span>
                    <button type="button" class="form-control" data-toggle="modal" data-target="#exampleModalCenter">
                    </button>
                        <span>Core Process</span>

                        @Html.TextBoxFor(m => m.tb_document.core_proccess, new { Id = "core_proccess", @username = "form-control", @class = "form-control form-risk" })
                        <span>Process</span>
                        @Html.TextBoxFor(m => m.tb_document.main_proccess, new { Id = "main_proccess", @username = "form-control", @class = "form-control form-risk" })

                 

                    <span>LOB</span>

                    @Html.TextBoxFor(m => m.tb_document.lob, new { Id = "lob", @username = "form-control", @class = "form-control form-risk" })

                    <button class="btn btn-success">Submit Form</button>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
